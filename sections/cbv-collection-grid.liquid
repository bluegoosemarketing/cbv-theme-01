{{ 'section-cbv-collection-format-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign featured_collection = section.settings.best_sellers_collection
  if featured_collection == blank
    assign featured_collection = collection
  endif
-%}

<section class="cbv-format-grid color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <header class="cbv-format-grid__hero">
      {%- if section.settings.eyebrow != blank -%}
        <p class="cbv-format-grid__eyebrow">{{ section.settings.eyebrow | escape }}</p>
      {%- endif -%}
      <h1 class="cbv-format-grid__title">{{ collection.title | escape }}</h1>
      {%- if section.settings.intro != blank -%}
        <div class="cbv-format-grid__intro rte">{{ section.settings.intro }}</div>
      {%- elsif collection.description != blank -%}
        <div class="cbv-format-grid__intro rte">{{ collection.description }}</div>
      {%- endif -%}
    </header>

    <div class="cbv-format-grid__cards" role="list">
      {%- for block in section.blocks -%}
        {%- liquid
          assign card_title = block.settings.title | default: block.settings.format_size
          assign card_link = block.settings.link
          assign card_cta = block.settings.cta_label | default: section.settings.default_cta_label
          assign card_tag = 'div'
          if card_link != blank
            assign card_tag = 'a'
          endif
        -%}

        <{{ card_tag }}
          {% if card_link != blank %}href="{{ card_link }}"{% endif %}
          class="cbv-format-card"
          {{ block.shopify_attributes }}
          role="listitem"
        >
          <div class="cbv-format-card__media">
            {%- if block.settings.image != blank -%}
              {{
                block.settings.image
                | image_url: width: 900
                | image_tag:
                  loading: 'lazy',
                  widths: '280, 420, 560, 720, 900',
                  sizes: '(min-width: 990px) 25vw, (min-width: 750px) 50vw, 100vw',
                  class: 'cbv-format-card__image',
                  alt: card_title
              }}
            {%- else -%}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'cbv-format-card__placeholder' }}
            {%- endif -%}
          </div>

          <div class="cbv-format-card__content">
            <h2 class="cbv-format-card__title">{{ card_title | escape }}</h2>
            {%- if block.settings.description != blank -%}
              <p class="cbv-format-card__description">{{ block.settings.description }}</p>
            {%- endif -%}
            <span class="cbv-format-card__cta">{{ card_cta | escape }}</span>
          </div>
        </{{ card_tag }}>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_best_sellers and featured_collection != blank and featured_collection.products_count > 0 -%}
      <div class="cbv-format-grid__best-sellers">
        <div class="cbv-format-grid__best-sellers-header">
          <h2>{{ section.settings.best_sellers_heading | escape }}</h2>
        </div>

        <div class="cbv-format-grid__best-sellers-list" role="list">
          {%- for product in featured_collection.products limit: section.settings.best_sellers_limit -%}
            <a href="{{ product.url }}" class="cbv-best-seller" role="listitem">
              <div class="cbv-best-seller__media">
                {%- if product.featured_media -%}
                  {{
                    product.featured_media
                    | image_url: width: 600
                    | image_tag:
                      loading: 'lazy',
                      widths: '160, 260, 360, 520, 600',
                      sizes: '(min-width: 990px) 20vw, 45vw',
                      class: 'cbv-best-seller__image',
                      alt: product.title
                  }}
                {%- endif -%}
              </div>
              <div class="cbv-best-seller__content">
                <h3>{{ product.title | escape }}</h3>
                <p>{{ product.price | money }}</p>
                <span>{{ section.settings.best_sellers_cta_label | escape }}</span>
              </div>
            </a>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "CBV collection format grid",
  "tag": "section",
  "class": "section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
