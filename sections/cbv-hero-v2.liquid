{%- style -%}
  .cbv-hero-v2-{{ section.id }} {
    /* --- Palette --- */
    --hero-bg: #FFF8F0;
    --hero-ink: #2D241E;
    --hero-accent: #F26A44;
    --hero-accent-hover: #D9542F;
    --hero-sage: #6B5C53;
    --hero-border: rgba(107, 92, 83, 0.15);

    /* --- Spacing & sizing --- */
    --hero-max-width: 1500px;
    --hero-gutter: 5vw;
    --hero-radius: 24px;
    
    position: relative;
    background-color: var(--hero-bg);
    overflow: hidden;
    color: var(--hero-ink);
  }

  /* Texture overlay */
  .cbv-hero-v2-{{ section.id }}::before {
    content: "";
    position: absolute;
    inset: 0;
    opacity: 0.4;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.15'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 0;
  }

  /* =========================
     LAYOUT GRID
     ========================= */
  .cbv-hero__container {
    position: relative;
    z-index: 2;
    max-width: var(--hero-max-width);
    margin: 0 auto;
    padding: 6rem var(--hero-gutter);
    display: grid;
    /* 55% / 45% split */
    grid-template-columns: 1.2fr 0.9fr; 
    gap: 5rem;
    align-items: center;
    min-height: 700px;
  }

  /* =========================
     CONTENT COLUMN
     ========================= */
  .cbv-hero__content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    max-width: 800px;
    padding-right: 2rem;
  }

  .cbv-hero__eyebrow {
    font-family: 'Outfit', sans-serif !important;
    background-color: #FFEBE5;
    color: var(--hero-accent);
    font-size: 1.3rem;
    padding: 0.5rem 1.4rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-weight: 700;
    margin-bottom: 2.4rem;
    display: inline-block;
  }

  .cbv-hero__headline {
    font-family: 'Outfit', sans-serif !important;
    font-weight: 700;
    font-size: clamp(4.8rem, 5.5vw, 7.6rem); 
    line-height: 1.05;
    margin: 0 0 2.8rem 0;
    color: var(--hero-ink);
    letter-spacing: -0.025em;
    width: 100%;
    text-wrap: balance; 
  }

  .cbv-hero__headline-break {
    display: inline;
  }

  .cbv-hero__body {
    font-family: 'DM Sans', sans-serif !important;
    font-size: 1.9rem;
    line-height: 1.6;
    color: var(--hero-sage);
    margin-bottom: 4rem;
    max-width: 90%;
  }

  /* =========================
     INTERACTIVE AREA
     ========================= */
  .cbv-hero__interactive-group {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    width: 100%;
  }

  .cbv-hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1.6rem;
    width: 100%;
  }

  .cbv-hero__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.6rem 3.6rem;
    font-family: 'Outfit', sans-serif !important;
    font-size: 1.6rem;
    letter-spacing: 0.03em;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    cursor: pointer;
    border-radius: 100px;
    white-space: nowrap;
  }

  .cbv-hero__btn--primary {
    background-color: var(--hero-accent);
    color: #fff;
    border: 2px solid var(--hero-accent);
    box-shadow: 0 10px 25px -5px rgba(242, 106, 68, 0.4);
  }

  .cbv-hero__btn--primary:hover {
    background-color: var(--hero-accent-hover);
    border-color: var(--hero-accent-hover);
    transform: translateY(-3px);
    box-shadow: 0 15px 30px -5px rgba(242, 106, 68, 0.5);
  }

  .cbv-hero__btn--secondary {
    background-color: transparent;
    color: var(--hero-ink);
    border: 2px solid #DCCCBC;
  }

  .cbv-hero__btn--secondary:hover {
    border-color: var(--hero-ink);
    background-color: #fff;
    transform: translateY(-3px);
  }

  /* =========================
     TRUST INDICATORS
     ========================= */
  .cbv-hero__trust-list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    column-gap: 2.5rem;
    row-gap: 0.8rem;
  }

  .cbv-hero__trust-item {
    font-family: 'DM Sans', sans-serif !important;
    font-size: 1.35rem;
    font-weight: 500;
    color: var(--hero-ink);
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
  }

  .cbv-hero__icon-check {
    width: 18px;
    height: 18px;
    color: var(--hero-accent);
    flex-shrink: 0;
  }

  /* =========================
     NEW SCENT CLOUD COMPONENT
     ========================= */
  .cbv-hero__scent-section {
    margin-top: 1rem;
    padding-top: 2.5rem;
    border-top: 1px solid rgba(107, 92, 83, 0.12); /* Visual divider */
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .cbv-hero__scent-label {
    font-family: 'Outfit', sans-serif !important;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--hero-sage);
    font-weight: 700;
    opacity: 0.85;
  }

  .cbv-hero__scent-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    align-items: center;
  }

  /* The Pill Styling */
  .cbv-hero__scent-pill {
    display: inline-block;
    background-color: #FFFFFF;
    border: 1px solid #E6DDD5;
    color: var(--hero-ink);
    padding: 0.6rem 1.4rem;
    border-radius: 20px;
    font-family: 'DM Sans', sans-serif !important;
    font-size: 1.3rem;
    font-weight: 500;
    line-height: 1.4;
    white-space: nowrap;
    box-shadow: 0 2px 5px rgba(0,0,0,0.02);
    transition: transform 0.2s ease, border-color 0.2s ease;
    cursor: default;
  }

  .cbv-hero__scent-pill:hover {
    border-color: var(--hero-accent);
    transform: translateY(-1px);
  }

  /* =========================
     MEDIA / IMAGE
     ========================= */
  .cbv-hero__media-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .cbv-hero__media {
    position: relative;
    width: 100%;
    max-width: 650px;
    aspect-ratio: 4 / 3.4;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 
      0 20px 40px -10px rgba(45, 36, 30, 0.15),
      20px 20px 0px rgba(242, 106, 68, 0.1); 
    z-index: 1;
    transform: perspective(1000px) rotateY(-2deg);
    transition: transform 0.5s ease;
  }
  
  .cbv-hero__media:hover {
     transform: perspective(1000px) rotateY(0deg);
  }

  .cbv-hero__media img,
  .cbv-hero__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .cbv-hero__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #EFE8DF;
    color: var(--hero-sage);
    font-weight: 500;
  }

  /* =========================
     RESPONSIVE
     ========================= */
  @media screen and (max-width: 1100px) {
    .cbv-hero__container {
      gap: 3rem;
      padding: 5rem 3rem;
    }
    .cbv-hero__headline {
      font-size: 4.8rem;
    }
    .cbv-hero__media {
      transform: none;
    }
  }

  @media screen and (max-width: 900px) {
    .cbv-hero__container {
      grid-template-columns: 1fr;
      padding: 4rem 2rem 5rem;
      gap: 3rem;
      text-align: left;
    }

    .cbv-hero__content {
      max-width: 100%;
      padding-right: 0;
      order: 1;
    }

    .cbv-hero__media-wrapper {
      order: 2;
      justify-content: center;
    }

    .cbv-hero__media {
      width: 100%;
      max-width: 100%;
      box-shadow: 0 15px 30px -5px rgba(45, 36, 30, 0.15);
      aspect-ratio: 16/12;
    }

    .cbv-hero__headline {
      font-size: 3.8rem;
    }
    
    .cbv-hero__body {
      font-size: 1.7rem;
      max-width: 100%;
    }

    .cbv-hero__actions {
      flex-direction: column;
      width: 100%;
    }

    .cbv-hero__btn {
      width: 100%;
    }

    .cbv-hero__trust-list {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.8rem;
    }

    .cbv-hero__scent-section {
      padding-top: 2rem;
    }
    
    .cbv-hero__scent-cloud {
      gap: 0.6rem;
    }
    
    .cbv-hero__scent-pill {
      font-size: 1.2rem;
      padding: 0.5rem 1.2rem;
    }
  }
{%- endstyle -%}

<section class="cbv-hero-v2-{{ section.id }}">
  <div class="cbv-hero__container">
    
    <!-- LEFT CONTENT -->
    <div class="cbv-hero__content">
      
      {%- if section.settings.eyebrow != blank -%}
        <div class="cbv-hero__eyebrow">{{ section.settings.eyebrow }}</div>
      {%- endif -%}
      
      <h2 class="cbv-hero__headline">
        {{ section.settings.headline }}
      </h2>
      
      {%- if section.settings.body_text != blank -%}
        <div class="cbv-hero__body">
          {{ section.settings.body_text }}
        </div>
      {%- endif -%}

      <div class="cbv-hero__interactive-group">
        
        <!-- 1. CTAs -->
        <div class="cbv-hero__actions">
          {%- if section.settings.primary_button_label != blank -%}
            <a href="{{ section.settings.primary_button_link }}" class="cbv-hero__btn cbv-hero__btn--primary">
              {{ section.settings.primary_button_label }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.secondary_button_label != blank -%}
            <a href="{{ section.settings.secondary_button_link }}" class="cbv-hero__btn cbv-hero__btn--secondary">
              {{ section.settings.secondary_button_label }}
            </a>
          {%- endif -%}
        </div>

        <!-- 2. Trust Indicators -->
        {%- if section.settings.show_trust_bar -%}
          <ul class="cbv-hero__trust-list">
            {%- if section.settings.trust_item_1 != blank -%}
              <li class="cbv-hero__trust-item">
                <svg class="cbv-hero__icon-check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                {{ section.settings.trust_item_1 }}
              </li>
            {%- endif -%}
            {%- if section.settings.trust_item_2 != blank -%}
              <li class="cbv-hero__trust-item">
                <svg class="cbv-hero__icon-check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                {{ section.settings.trust_item_2 }}
              </li>
            {%- endif -%}
            {%- if section.settings.trust_item_3 != blank -%}
              <li class="cbv-hero__trust-item">
                <svg class="cbv-hero__icon-check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                {{ section.settings.trust_item_3 }}
              </li>
            {%- endif -%}
          </ul>
        {%- endif -%}

        <!-- 3. Scent Cloud (Rebuilt) -->
        {%- if section.settings.show_scent_examples and section.settings.scent_examples != blank -%}
          <div class="cbv-hero__scent-section">
            <span class="cbv-hero__scent-label">Scent Examples</span>
            <div class="cbv-hero__scent-cloud">
              {%- assign scents = section.settings.scent_examples | split: ',' -%}
              {%- for scent in scents -%}
                <span class="cbv-hero__scent-pill">{{ scent | strip }}</span>
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}

      </div>
    </div>

    <!-- RIGHT IMAGE -->
    <div class="cbv-hero__media-wrapper">
      <div class="cbv-hero__media">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1400 | image_tag: loading: 'eager', sizes: '(min-width: 990px) 50vw, 100vw', widths: '375, 550, 750, 1100, 1400' }}
        {%- else -%}
          <div class="cbv-hero__placeholder">
            <span>Select Image</span>
          </div>
        {%- endif -%}
      </div>
    </div>

  </div>
</section>

