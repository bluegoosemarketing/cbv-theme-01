{%- style -%}
  .cbv-hero-v2-{{ section.id }} {
    /* Use the same variables as base.css for consistency */
    --hero-bg: #F9F5F0;
    --hero-ink: #2C2621;
    --hero-accent: #D87A2F; /* The branded Orange */
    --hero-sage: #5D6B45;
    
    /* Exact match to Header alignment */
    --hero-max-width: 1600px; 
    --hero-gutter-desktop: 5rem;
    --hero-gutter-mobile: 2rem;

    position: relative;
    background-color: var(--hero-bg);
    overflow: hidden;
    color: var(--hero-ink);
  }

  /* Texture Overlay */
  .cbv-hero-v2-{{ section.id }}::before {
    content: "";
    position: absolute;
    inset: 0;
    opacity: 0.3;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.1'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 0;
  }

  /* Layout Container */
  .cbv-hero__container {
    position: relative;
    z-index: 1;
    max-width: var(--hero-max-width);
    margin: 0 auto;
    padding: 6rem var(--hero-gutter-desktop) 8rem; /* Top/Bottom padding, Left/Right gutter */
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
  }

  /* Content Alignment */
  .cbv-hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start; /* Ensures left alignment match */
    max-width: 720px; /* Constrains line length for readability */
  }

  .cbv-hero__eyebrow {
    font-family: var(--font-body-family);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 700;
    color: var(--hero-sage);
    margin-bottom: 1.5rem;
    display: inline-block;
  }

  .cbv-hero__headline {
    font-family: var(--font-heading-family); /* Matches Brand Font */
    font-weight: 500; /* Heavier/Established feel */
    font-size: clamp(3.5rem, 5.5vw, 6.5rem);
    line-height: 1.05;
    margin: 0 0 2rem 0;
    color: var(--hero-ink);
    letter-spacing: -0.01em;
  }

  .cbv-hero__body {
    font-family: var(--font-body-family);
    font-size: 1.25rem;
    line-height: 1.7;
    color: rgba(44, 38, 33, 0.85);
    margin-bottom: 3.5rem;
    max-width: 90%;
  }

  /* Commanding Buttons */
  .cbv-hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    width: 100%;
  }

  .cbv-hero__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.6rem 3.5rem; /* Large, confident touch targets */
    font-family: var(--font-body-family);
    font-size: 1.2rem; /* Larger text */
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    min-width: 220px; /* Ensure buttons have presence */
    text-align: center;
  }

  .cbv-hero__btn--primary {
    background-color: var(--hero-ink);
    color: #fff;
    border: 1px solid var(--hero-ink);
  }

  .cbv-hero__btn--primary:hover {
    background-color: var(--hero-accent);
    border-color: var(--hero-accent);
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(216, 122, 47, 0.25);
  }

  .cbv-hero__btn--secondary {
    background-color: transparent;
    color: var(--hero-ink);
    border: 1px solid rgba(44, 38, 33, 0.3);
  }

  .cbv-hero__btn--secondary:hover {
    border-color: var(--hero-ink);
    background-color: rgba(44, 38, 33, 0.05);
    transform: translateY(-2px);
  }

  /* Visuals */
  .cbv-hero__media-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-end; /* Pushes image to the right alignment line */
    align-items: center;
  }

  .cbv-hero__media {
    width: 100%;
    max-width: 100%;
    aspect-ratio: 1 / 1.1; /* Slightly taller than square */
    background: #EAE4DC;
    position: relative;
    overflow: hidden;
    /* Clean, sharp edges or subtle radius depending on preference. 
       Premium usually implies subtle or none. 
       Going with sharp for "Established" feel. */
    border-radius: 4px; 
    box-shadow: 20px 20px 0px rgba(44, 38, 33, 0.05); /* offset shadow block */
  }

  .cbv-hero__media img,
  .cbv-hero__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cbv-hero__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(44,38,33,0.3);
    font-family: var(--font-heading-family);
    font-size: 1.5rem;
  }

  /* Responsive Adjustments */
  @media screen and (max-width: 1200px) {
    .cbv-hero__container {
      gap: 3rem;
    }
    .cbv-hero__headline {
      font-size: 4rem;
    }
  }

  @media screen and (max-width: 989px) {
    .cbv-hero__container {
      grid-template-columns: 1fr;
      padding: 4rem var(--hero-gutter-mobile) 6rem;
      gap: 4rem;
    }

    .cbv-hero__media-wrapper {
      justify-content: center;
    }

    .cbv-hero__media {
      max-width: 100%;
      aspect-ratio: 1/1;
      box-shadow: 10px 10px 0px rgba(44, 38, 33, 0.05);
    }
    
    .cbv-hero__content {
      max-width: 100%;
    }

    .cbv-hero__actions {
      flex-direction: column;
    }
    
    .cbv-hero__btn {
      width: 100%;
    }
  }
{%- endstyle -%}

<section class="cbv-hero-v2-{{ section.id }}">
  <div class="cbv-hero__container">
    
    <div class="cbv-hero__content">
      {%- if section.settings.eyebrow != blank -%}
        <div class="cbv-hero__eyebrow">{{ section.settings.eyebrow }}</div>
      {%- endif -%}
      
      <h2 class="cbv-hero__headline">
        {{ section.settings.headline }}
      </h2>
      
      {%- if section.settings.body_text != blank -%}
        <div class="cbv-hero__body">
          {{ section.settings.body_text }}
        </div>
      {%- endif -%}

      <div class="cbv-hero__actions">
        {%- if section.settings.primary_button_label != blank -%}
          <a href="{{ section.settings.primary_button_link }}" class="cbv-hero__btn cbv-hero__btn--primary">
            {{ section.settings.primary_button_label }}
          </a>
        {%- endif -%}
        
        {%- if section.settings.secondary_button_label != blank -%}
          <a href="{{ section.settings.secondary_button_link }}" class="cbv-hero__btn cbv-hero__btn--secondary">
            {{ section.settings.secondary_button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>

    <div class="cbv-hero__media-wrapper">
      <div class="cbv-hero__media">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1400 | image_tag: loading: 'eager', sizes: '(min-width: 990px) 50vw, 100vw', widths: '375, 550, 750, 1100, 1400' }}
        {%- else -%}
          <div class="cbv-hero__placeholder">
            <span>Select Image</span>
          </div>
        {%- endif -%}
      </div>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "CBV Hero v2",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "EST. 1999"
    },
    {
      "type": "textarea",
      "id": "headline",
      "label": "Headline",
      "default": "Fragrance that fills the room with warmth."
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "Over 450 carefully blended scents crafted in small batches to bring comfort, character, and atmosphere into your home."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary Button Label",
      "default": "Shop Best Sellers"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary Button Label",
      "default": "Explore All Scents"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "CBV Hero v2"
    }
  ]
}
{% endschema %}