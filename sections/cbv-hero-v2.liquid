{%- style -%}
  .cbv-hero-v2-{{ section.id }} {
    --hero-bg: #FFF8F0;
    --hero-ink: #2D241E;
    --hero-accent: #F26A44;
    --hero-sage: #6B5C53;

    --hero-max-width: 1600px;
    --hero-gutter-desktop: 5rem;
    --hero-gutter-mobile: 2rem;

    position: relative;
    background-color: var(--hero-bg);
    overflow: hidden;
    color: var(--hero-ink);
  }

  .cbv-hero-v2-{{ section.id }}::before {
    content: "";
    position: absolute;
    inset: 0;
    opacity: 0.3;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.1'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 0;
  }

  /* =========================
     LAYOUT
     ========================= */
  .cbv-hero__container {
    position: relative;
    z-index: 1;
    max-width: var(--hero-max-width);
    margin: 0 auto;
    padding: 3.8rem var(--hero-gutter-desktop) 5.0rem; /* less condensed, still tight */
    display: grid;
    grid-template-columns: 1.1fr 0.9fr; /* slightly less extreme than before */
    gap: 4.6rem;
    align-items: center;
    min-height: 540px; /* prevents “top heavy” feeling on tall viewports */
  }

  .cbv-hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    max-width: 760px;
  }

  /* =========================
     TYPOGRAPHY
     ========================= */
  .cbv-hero__eyebrow {
    font-family: 'Outfit', sans-serif !important;
    background-color: #FFEBE5;
    color: var(--hero-accent);
    font-size: 1.4rem;
    padding: 0.6rem 1.6rem;
    border-radius: 99px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 700;
    margin-bottom: 2.0rem; /* slightly more breathing room */
    display: inline-block;
  }

  .cbv-hero__headline {
    font-family: 'Outfit', sans-serif !important;
    font-weight: 700;
    font-size: clamp(5rem, 7.2vw, 7.8rem);
    line-height: 1.02;
    margin: 0 0 2.2rem 0;
    color: var(--hero-ink);
    letter-spacing: -0.03em;
    max-width: 12ch;
    text-wrap: balance;
    text-wrap: pretty;
  }

  .cbv-hero__headline-break {
    display: block;
  }

  .cbv-hero__body {
    font-family: 'DM Sans', sans-serif !important;
    font-size: 1.72rem;
    line-height: 1.7;
    color: var(--hero-sage);
    margin-bottom: 3rem;
    max-width: 58ch;
  }

  /* =========================
     ACTIONS / BUTTONS
     ========================= */
  .cbv-hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1.2rem;
    width: 100%;
  }

  .cbv-hero__supporting {
    margin-top: 1.4rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 640px;
  }

  .cbv-hero__trust {
    margin-top: 0;
    padding: 0.9rem 0;
    border-radius: 0;
    background: transparent;
    border-top: 1px solid rgba(107, 92, 83, 0.2);
    border-bottom: 1px solid rgba(107, 92, 83, 0.14);
    width: 100%;
    max-width: 640px;
  }

  .cbv-hero__trust-list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1.4rem;
    align-items: center;
  }

  .cbv-hero__trust-item {
    font-family: 'DM Sans', sans-serif !important;
    font-size: 1.36rem;
    line-height: 1.4;
    color: rgba(45, 36, 30, 0.84);
    display: inline-flex;
    align-items: center;
    gap: 0.55rem;
    white-space: nowrap;
  }

  .cbv-hero__trust-item::before {
    content: '';
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--hero-accent);
    flex-shrink: 0;
    opacity: 0.75;
  }

  .cbv-hero__scent-examples {
    margin-top: 0;
    font-family: 'DM Sans', sans-serif !important;
    font-size: 1.28rem;
    line-height: 1.55;
    color: rgba(107, 92, 83, 0.9);
    max-width: 52ch;
    margin-bottom: 0;
  }

  .cbv-hero__scent-examples strong {
    color: rgba(45, 36, 30, 0.86);
    font-weight: 500;
  }

  .cbv-hero__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.6rem 3.2rem;
    font-family: 'Outfit', sans-serif !important;
    font-size: 1.6rem;
    letter-spacing: 0.05em;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    min-width: 200px;
    text-align: center;
    border-radius: 99px;
  }

  .cbv-hero__btn--primary {
    background-color: var(--hero-accent);
    color: #fff;
    border: none;
    box-shadow: 0 4px 15px rgba(242, 106, 68, 0.3);
  }

  .cbv-hero__btn--primary:hover {
    background-color: #D9542F;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(242, 106, 68, 0.4);
  }

  .cbv-hero__btn--secondary {
    background-color: transparent;
    color: var(--hero-ink);
    border: 2px solid #E6DDD5;
  }

  .cbv-hero__btn--secondary:hover {
    border-color: var(--hero-accent);
    color: var(--hero-accent);
    transform: translateY(-2px);
  }

  /* =========================
     MEDIA
     ========================= */
  .cbv-hero__media-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 2.2rem 0; /* adds top + bottom separation */
}

  /* removed – using layered box-shadow instead */

.cbv-hero__media {
    width: 92%;              /* slightly smaller relative size */
    max-width: 620px;        /* reduce dominance */
    aspect-ratio: 16 / 12;
    background: #EFE8DF;
    position: relative;
    overflow: hidden;        /* clips image to rounded corners */
    border-radius: 24px;
    box-shadow:
      16px 16px 0 #FFDECE,   /* the “shape” behind the image */
      0 10px 30px rgba(0,0,0,0.05);
    z-index: 1;
}


/* Shape now follows the image card size perfectly */
.cbv-hero__media::before {
    content: '';
    position: absolute;
    top: 16px;
    left: 16px;
    right: -16px;
    bottom: -16px;
    background-color: #FFDECE;
    border-radius: 24px;
    z-index: -1;
}

  .cbv-hero__media img,
  .cbv-hero__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cbv-hero__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--hero-sage);
    font-family: 'Outfit', sans-serif;
    font-weight: 500;
    font-size: 1.6rem;
  }

  /* =========================
     RESPONSIVE
     ========================= */
  @media screen and (max-width: 1200px) {
    .cbv-hero__container {
      gap: 3.6rem;
      min-height: 0; /* don’t force height on smaller screens */
    }
    .cbv-hero__headline {
      font-size: clamp(3.8rem, 6.2vw, 5.6rem);
      max-width: 13ch;
    }
  }

  @media screen and (max-width: 989px) {
    .cbv-hero__container {
      grid-template-columns: 1fr;
      padding: 4rem var(--hero-gutter-mobile) 5rem;
      gap: 3.2rem;
      min-height: 0;
    }

    .cbv-hero__media-wrapper {
      justify-content: center;
    }

    .cbv-hero__media {
      max-width: 100%;
      aspect-ratio: 1 / 1;
    }

    .cbv-hero__content {
      max-width: 100%;
    }

    .cbv-hero__body {
      max-width: 100%;
    }

    .cbv-hero__headline-break {
      display: inline;
    }

    .cbv-hero__scent-examples {
      max-width: 100%;
    }

    .cbv-hero__actions {
      flex-direction: column;
    }

    .cbv-hero__btn {
      width: 100%;
    }

    .cbv-hero__trust {
      margin-top: 0;
      padding: 0.9rem 0;
    }

    .cbv-hero__trust-list {
      gap: 0.5rem 1rem;
      align-items: center;
    }

    .cbv-hero__trust-item {
      white-space: nowrap;
    }

    .cbv-hero__supporting {
      margin-top: 1.2rem;
      gap: 0.8rem;
    }
  }
{%- endstyle -%}

<section class="cbv-hero-v2-{{ section.id }}">
  <div class="cbv-hero__container">
    
    <div class="cbv-hero__content">
      {%- if section.settings.eyebrow != blank -%}
        <div class="cbv-hero__eyebrow">{{ section.settings.eyebrow }}</div>
      {%- endif -%}
      
      {%- assign styled_headline = section.settings.headline | replace: ' You Can Actually Smell.', ' You Can <span class="cbv-hero__headline-break">Actually Smell.</span>' | replace: ' you can actually smell', ' you can <span class="cbv-hero__headline-break">actually smell</span>' -%}
      <h2 class="cbv-hero__headline">{{ styled_headline }}</h2>
      
      {%- if section.settings.body_text != blank -%}
        <div class="cbv-hero__body">
          {{ section.settings.body_text }}
        </div>
      {%- endif -%}

      <div class="cbv-hero__actions">
        {%- if section.settings.primary_button_label != blank -%}
          <a href="{{ section.settings.primary_button_link }}" class="cbv-hero__btn cbv-hero__btn--primary">
            {{ section.settings.primary_button_label }}
          </a>
        {%- endif -%}
        
        {%- if section.settings.secondary_button_label != blank -%}
          <a href="{{ section.settings.secondary_button_link }}" class="cbv-hero__btn cbv-hero__btn--secondary">
            {{ section.settings.secondary_button_label }}
          </a>
        {%- endif -%}
      </div>

      {%- assign trust_1 = section.settings.trust_item_1 | strip -%}
      {%- assign trust_2 = section.settings.trust_item_2 | strip -%}
      {%- assign trust_3 = section.settings.trust_item_3 | strip -%}
      {%- assign show_trust_content = false -%}
      {%- if section.settings.show_trust_bar and (trust_1 != blank or trust_2 != blank or trust_3 != blank) -%}
        {%- assign show_trust_content = true -%}
      {%- endif -%}
      {%- assign show_scents = false -%}
      {%- if section.settings.show_scent_examples and section.settings.scent_examples != blank -%}
        {%- assign show_scents = true -%}
      {%- endif -%}

      {%- if show_trust_content or show_scents -%}
        <div class="cbv-hero__supporting">
          {%- if show_trust_content -%}
            <div class="cbv-hero__trust" aria-label="Trust highlights">
              <ul class="cbv-hero__trust-list">
                {%- if trust_1 != blank -%}<li class="cbv-hero__trust-item">{{ trust_1 }}</li>{%- endif -%}
                {%- if trust_2 != blank -%}<li class="cbv-hero__trust-item">{{ trust_2 }}</li>{%- endif -%}
                {%- if trust_3 != blank -%}<li class="cbv-hero__trust-item">{{ trust_3 }}</li>{%- endif -%}
              </ul>
            </div>
          {%- endif -%}

          {%- if show_scents -%}
            <p class="cbv-hero__scent-examples">
              <strong>Scent examples:</strong> {{ section.settings.scent_examples }}
            </p>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>

    <div class="cbv-hero__media-wrapper">
      <div class="cbv-hero__media">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1400 | image_tag: loading: 'eager', sizes: '(min-width: 990px) 50vw, 100vw', widths: '375, 550, 750, 1100, 1400' }}
        {%- else -%}
          <div class="cbv-hero__placeholder">
            <span>Select Image</span>
          </div>
        {%- endif -%}
      </div>
    </div>

  </div>
</section>

