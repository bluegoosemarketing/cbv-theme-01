{%- style -%}
  .cbv-hero-v2-{{ section.id }} {
    --cbv-hero-bg: var(--cbv-bg, #f8f2e7);
    --cbv-hero-surface: rgba(255, 255, 255, 0.74);
    --cbv-hero-ink: #2a1f15;
    --cbv-hero-orange: var(--cbv-orange, #d5743f);
    --cbv-hero-orange-hover: #bf5f2e;
    --cbv-hero-sage: var(--cbv-sage, #7f8e6b);
    --cbv-hero-border: rgba(86, 64, 42, 0.14);
    position: relative;
    overflow: clip;
    background:
      radial-gradient(circle at 7% 18%, rgba(255, 238, 206, 0.72), transparent 44%),
      radial-gradient(circle at 82% 12%, rgba(226, 184, 135, 0.24), transparent 36%),
      linear-gradient(140deg, rgba(255, 255, 255, 0.72), rgba(255, 255, 255, 0.16) 48%, rgba(252, 237, 215, 0.35)),
      var(--cbv-hero-bg);
    padding: clamp(5rem, 10vw, 8.5rem) clamp(1rem, 3vw, 3rem) clamp(4.8rem, 7vw, 7rem);
  }

  .cbv-hero-v2-{{ section.id }}::before,
  .cbv-hero-v2-{{ section.id }}::after {
    content: '';
    position: absolute;
    pointer-events: none;
  }

  .cbv-hero-v2-{{ section.id }}::before {
    inset: 0;
    background: linear-gradient(180deg, rgba(54, 37, 20, 0.11) 0, rgba(54, 37, 20, 0) 16%);
  }

  .cbv-hero-v2-{{ section.id }}::after {
    right: clamp(-8rem, -3vw, -2rem);
    top: clamp(8rem, 14vw, 12rem);
    width: clamp(18rem, 34vw, 34rem);
    height: clamp(18rem, 34vw, 34rem);
    border-radius: 50%;
    background: radial-gradient(circle, rgba(78, 97, 53, 0.2), rgba(78, 97, 53, 0));
    opacity: 0.65;
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__inner {
    position: relative;
    z-index: 1;
    width: min(100%, 1640px);
    margin: 0 auto;
    display: grid;
    grid-template-columns: minmax(0, 1.28fr) minmax(340px, 0.72fr);
    gap: clamp(2rem, 3.6vw, 5rem);
    align-items: center;
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__content {
    max-width: 760px;
    background: linear-gradient(132deg, var(--cbv-hero-surface), rgba(255, 255, 255, 0.36));
    border: 1px solid var(--cbv-hero-border);
    border-radius: clamp(1.1rem, 1.7vw, 1.8rem);
    padding: clamp(1.8rem, 3.3vw, 3rem) clamp(1.4rem, 2.8vw, 2.8rem);
    box-shadow: 0 28px 52px rgba(71, 51, 31, 0.12);
    backdrop-filter: blur(3px);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__eyebrow {
    margin: 0 0 1.25rem;
    font-family: Inter, sans-serif;
    font-size: 0.78rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    font-weight: 600;
    color: rgba(42, 31, 21, 0.72);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__headline {
    margin: 0;
    max-width: 16ch;
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(3rem, 5.8vw, 6.4rem);
    letter-spacing: -0.015em;
    line-height: 0.95;
    color: var(--cbv-hero-ink);
    text-wrap: balance;
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__body {
    max-width: 52ch;
    margin: clamp(1.1rem, 2vw, 1.6rem) 0 0;
    font-family: Inter, sans-serif;
    font-size: clamp(1rem, 1.35vw, 1.24rem);
    line-height: 1.75;
    color: rgba(42, 31, 21, 0.86);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: clamp(1.7rem, 2.2vw, 2.3rem);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 58px;
    padding: 1rem 1.95rem;
    border-radius: 999px;
    font-family: Inter, sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    text-decoration: none;
    transition: transform 0.24s ease, box-shadow 0.24s ease, background-color 0.24s ease, color 0.24s ease, border-color 0.24s ease;
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__btn--primary {
    background-color: var(--cbv-hero-orange);
    border: 1px solid var(--cbv-hero-orange);
    color: #fff;
    box-shadow: 0 16px 26px rgba(171, 92, 42, 0.28);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__btn--primary:hover {
    background-color: var(--cbv-hero-orange-hover);
    border-color: var(--cbv-hero-orange-hover);
    transform: translateY(-2px);
    box-shadow: 0 22px 30px rgba(171, 92, 42, 0.32);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__btn--secondary {
    background-color: rgba(255, 255, 255, 0.6);
    border: 1px solid rgba(79, 97, 53, 0.7);
    color: var(--cbv-hero-sage);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.4);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__btn--secondary:hover {
    background: rgba(127, 142, 107, 0.12);
    transform: translateY(-2px);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__media-wrap {
    display: flex;
    justify-content: flex-end;
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__media {
    position: relative;
    width: min(100%, 620px);
    border-radius: clamp(1rem, 1.8vw, 1.8rem);
    overflow: hidden;
    border: 1px solid rgba(113, 83, 52, 0.18);
    box-shadow: 0 30px 54px rgba(61, 44, 27, 0.2);
    background: rgba(255, 255, 255, 0.58);
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__media::after {
    content: '';
    position: absolute;
    inset: auto 0 0;
    height: 30%;
    background: linear-gradient(180deg, rgba(31, 24, 18, 0), rgba(31, 24, 18, 0.2));
    pointer-events: none;
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__media img,
  .cbv-hero-v2-{{ section.id }} .cbv-hero__placeholder {
    display: block;
    width: 100%;
    height: 100%;
    min-height: clamp(460px, 52vw, 760px);
    object-fit: cover;
  }

  .cbv-hero-v2-{{ section.id }} .cbv-hero__placeholder {
    background: linear-gradient(150deg, rgba(255, 216, 173, 0.42), rgba(246, 237, 226, 0.95));
  }

  @media screen and (max-width: 1280px) {
    .cbv-hero-v2-{{ section.id }} .cbv-hero__inner {
      grid-template-columns: minmax(0, 1.1fr) minmax(300px, 0.9fr);
    }
  }

  @media screen and (max-width: 989px) {
    .cbv-hero-v2-{{ section.id }} {
      padding-top: clamp(4.1rem, 13vw, 6rem);
      padding-bottom: clamp(4rem, 11vw, 5.5rem);
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__inner {
      grid-template-columns: 1fr;
      gap: clamp(1.8rem, 5vw, 3rem);
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__content {
      order: 1;
      max-width: none;
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__media-wrap {
      order: 2;
      justify-content: center;
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__headline {
      max-width: none;
      font-size: clamp(2.6rem, 10vw, 4.8rem);
      line-height: 0.98;
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__media {
      width: min(100%, 720px);
    }
  }

  @media screen and (max-width: 749px) {
    .cbv-hero-v2-{{ section.id }} {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__content {
      padding: 1.45rem 1.1rem 1.6rem;
      border-radius: 1rem;
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__actions {
      flex-direction: column;
      align-items: stretch;
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__btn {
      width: 100%;
      min-height: 54px;
    }

    .cbv-hero-v2-{{ section.id }} .cbv-hero__media img,
    .cbv-hero-v2-{{ section.id }} .cbv-hero__placeholder {
      min-height: clamp(340px, 100vw, 500px);
    }
  }
{%- endstyle -%}

<section class="cbv-hero-v2-{{ section.id }}">
  <div class="cbv-hero__inner">
    <div class="cbv-hero__content">
      <p class="cbv-hero__eyebrow">{{ section.settings.eyebrow | escape }}</p>
      <h2 class="cbv-hero__headline">{{ section.settings.headline | escape }}</h2>
      <p class="cbv-hero__body">{{ section.settings.body_text | escape }}</p>
      <div class="cbv-hero__actions">
        <a
          {% if section.settings.primary_button_link != blank %}
            href="{{ section.settings.primary_button_link }}"
          {% else %}
            role="link" aria-disabled="true"
          {% endif %}
          class="cbv-hero__btn cbv-hero__btn--primary"
        >
          {{ section.settings.primary_button_label | escape }}
        </a>
        <a
          {% if section.settings.secondary_button_link != blank %}
            href="{{ section.settings.secondary_button_link }}"
          {% else %}
            role="link" aria-disabled="true"
          {% endif %}
          class="cbv-hero__btn cbv-hero__btn--secondary"
        >
          {{ section.settings.secondary_button_label | escape }}
        </a>
      </div>
    </div>

    <div class="cbv-hero__media-wrap">
      <div class="cbv-hero__media">
        {%- if section.settings.image != blank -%}
          {{
            section.settings.image
            | image_url: width: 1800
            | image_tag:
              loading: 'lazy',
              widths: '540, 720, 900, 1100, 1400, 1800',
              sizes: '(max-width: 989px) 100vw, 50vw'
          }}
        {%- else -%}
          <div class="cbv-hero__placeholder"></div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CBV Hero v2",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Hand Poured Since 1999"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Fragrance That Fills Every Room With Warmth"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body text",
      "default": "Over 450 carefully blended scents crafted in small batches to bring comfort, character, and atmosphere into your home."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary button label",
      "default": "Shop Best Sellers"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Explore All Scents"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "CBV Hero v2"
    }
  ]
}
{% endschema %}
