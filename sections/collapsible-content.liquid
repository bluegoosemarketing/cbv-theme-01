{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 990px) {
    .margin-spacing-negative.section-{{ section.id }}-margin {
      margin-top: -{{ section.settings.margin_top }}px;
    }
    .margin-spacing-positive.section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
    }
  }
{%- endstyle -%}

{% comment %} Start Collapsible Content {% endcomment %}
<div class="ignore-{{ section.settings.ignore_spacing }}">
  <div class="collapsible-content--style_one color-{{ section.settings.color_scheme }} gradient margin-spacing-{{ section.settings.margin_spacing }} section-{{ section.id }}-margin" data-aos="fade-up">
    <div class="collapsible-content page-width">
      <div
        class="collapsible-content-wrapper {% if section.settings.mobile_enable_gradient == false %}ignore-background-padding-mobile--true{% endif %} section-{{ section.id }}-padding"
        data-aos="fade-up" data-aos-delay="250"
      >
        {% comment %} Start Collapsible Content {% endcomment %}
        <div class="collapsible-content-container">
          {% comment %} Start Collapsible Content Header {% endcomment %}
          <div class="collapsible-content-header" style="text-align: {{ section.settings.heading_alignment }};">
            {%- if section.settings.caption != blank -%}
              <p class="image-with-text-text image-with-text-text--caption {{ section.settings.text_style }} {{ section.settings.text_style }}--{{ section.settings.text_size }} {{ section.settings.text_style }}">
                {{ section.settings.caption | escape }}
              </p>
            {% endif %}
            {%- if section.settings.heading != blank -%}
              <{{ section.settings.heading_tag }} class="collapsible-content-heading heading-bold {{ section.settings.heading_size }} heading-{{ section.settings.heading_style }}">
                {{ section.settings.heading | escape }}
              </{{ section.settings.heading_tag }}>
            {%- else -%}
              <{{ section.settings.heading_tag }} class="visually-hidden">
                {{- 'accessibility.collapsible_content_title' | t -}}
              </{{ section.settings.heading_tag }}>
            {% endif %}
          </div>
          {% comment %} Ends Collapsible Content Header {% endcomment %}

          <div class="accordion-block">
            {%- for block in section.blocks -%}
              <div
                class="accordion"
                {{ block.shopify_attributes }}
              >
                <collapsible-row class="product__accordion accordion" data-aos="fade-up" data-aos-delay="250">
                  <details
                    id="Details-{{ block.id }}-{{ section.id }}"
                    {% if section.settings.open_first_collapsible_row and forloop.first %}
                      open
                    {% endif %} {% if section.settings.open_all_collapsible_row %}
                      open
                    {% endif %}
                  >
                    <summary class="color-{{ section.settings.color_scheme_1 }} gradient" id="Summary-{{ block.id }}-{{ section.id }}">
                      {% render 'icon-accordion', icon: block.settings.icon %}
                      <h3 class="accordion__title">
                        {{ block.settings.heading | default: block.settings.page.title }}
                      </h3>
                      {% render 'icon-caret' %}
                    </summary>
                    <div
                      class="collapsible__content accordion__content rte"
                      id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                      role="region"
                      aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                    >
                      {{ block.settings.row_content }}
                      {{ block.settings.page.content }}
                    </div>
                  </details>
                </collapsible-row>
              </div>
            {%- endfor -%}
          </div>
        </div>
        {% comment %} End Collapsible Content {% endcomment %}
      </div>
    </div>
  </div>
</div>
{% comment %} End Collapsible Content {% endcomment %}

